				sArchivo += "\n				</td></tr>";
				sArchivo += "\n			 </TABLE></td></tr>";
				sArchivo += "\n      </TABLE></td>";
				sArchivo += "\n</tr>";
				sArchivo += "\n<TR>";
				sArchivo += "\n	<TD height='25' class='TituloMenu'><a onmouseover=" + c + "this.style.cursor='hand'" + c + " style='cursor:normal'>¿Quién Auditó?</a></TD>";
